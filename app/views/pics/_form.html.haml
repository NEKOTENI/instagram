= simple_form_for @pic, html: { multipart: true } do |f|
  - if @pic.errors.any?
    #errors
      %h2
      = pluralize(@pic.errors.count, "errors")
      prevented this Pic from saving
      %ul
        - @pic.errors.full_messages.each do |msg|
          %li = msg

  .form-group
    = f.input :title, imput_html: { class: 'form-control' }
  .form-group
    = f.input :description, imput_html: { class: 'form-control' }

  = f.button :submit, class: "btm btn-info"
