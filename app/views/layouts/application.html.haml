!!! 5
%html
  %head
    %title Nyanstagram
    = csrf_meta_tags 
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.navbar.navbar-inverse
      .container
        .navbar-brand= link_to "Nyanstagram", root_path

        - if user_signed_in?
          %ul.nav.navbar-nav.navbar-left
            %li= link_to "投稿する(●ↀωↀ●)✧", new_pic_path
            %li= link_to "設定する(●ↀωↀ●)✧", edit_user_registration_path
            %li= link_to "もう帰りゅ(●ↀωↀ●)✧", destroy_user_session_path, method: :delete

        -else
          %ul.nav.navbar-nav.navbar-left
            %li= link_to "Join", new_user_registration_path
            %li= link_to "Log In", new_user_session_path

    .container
      -flash.each do |name, msg|
        =content_tag :div, msg, class: "alert alert-info"

      = yield
